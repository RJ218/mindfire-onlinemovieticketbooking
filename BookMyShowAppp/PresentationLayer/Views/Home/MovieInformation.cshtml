<!DOCTYPE html>
@{ var movieid = ViewData["movieid"];}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Martain</title>
    <title>Nav Bar</title>
    <link href="~/Content/css/MartianStyle.css" rel="stylesheet" />

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <!--for icons-->
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!--cdn of css for slick-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha256-4hqlsNP9KM6+2eA8VUT0kk4RsMRTeS7QGHIM+MZ5sLY=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha256-UK1EiopXIL+KVhfbFa8xrmAWPeBjMVdvYMYkTAEv/HI=" crossorigin="anonymous" />
    <!--cdn for bootstrap-->

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>


    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .cityLink {
            color: black;
        }

            .cityLink.active {
                color: green;
            }
    </style>
</head>
<body>
    <div>
        <h2 id=@movieid></h2>
        <div class='container-fluid' id='container'>

        </div>

        <div class='jumbotron'
             style='height: 100px; padding-left:0px !important;padding-right:0px !important;padding-left:0px !important;padding-top:10px !important'>
            <div>
                <button class='btn-danger btn-lg mt-3 mr-3' style='float: right;' onclick="booknow()"><a style="text-decoration:none;color:white;" data-toggle="modal" data-target="#theatures">Book Now</a></button>
                <span id='count'>
                    <i class="fa fa-thumbs-up"
                       style='font-size:60px; color:green;border-style: solid; border-width: 1px; border-radius: 20%; padding: 5px;'></i><span id='cc'></span>
                </span>

                <p class='interested'>INTERESTED</p>

            </div>
        </div>

        <div id='navs container row '>
            <div class="offset-md-2">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home"
                           role="tab" aria-controls="nav-home" aria-selected="true">Summary</a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile"
                           role="tab" aria-controls="nav-profile" aria-selected="false">User Reviews</a>
                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact"
                           role="tab" aria-controls="nav-contact" aria-selected="false">Critics</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active p-5" id="nav-home" role="tabpanel"
                         aria-labelledby="nav-home-tab">
                        <h3>SYNOPSIS</h3>
                        <p id="synopsis">

                        </p>
                        <h3>Cast</h3>
                        <div class="accordion mb-2" id="accordionExample">
                            <div class="card">

                                <h2 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse"
                                            data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        <span id='collapse_language'>
                                            <i class="fa fa-angle-down"
                                               style='font-size:xx-larger; padding-right: 8px;'></i>
                                        </span>View cast
                                    </button>
                                </h2>

                            </div>

                            <div id="collapseOne" class="collapse " aria-labelledby="headingOne"
                                 data-parent="#accordionExample">
                                <div class="card-body ml-4">
                                    <div class='row' id="cast">


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade ml-5" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        No users
                        have reviewed this movie yet.
                    </div>
                    <div class="tab-pane fade ml-5" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                        Sorry!
                        None of the critics have had a chance to review this movie yet.
                    </div>



                </div>




            </div>
        </div>
    </div>

    <div class="modal fade" id="theatures" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Theatures</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal_theatures">

                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" style="margin-left:4%;"><a href="/Home/BookSeats" id="btn" style="text-decoration:none;color:white">Select Seats</a></button>

                </div>

            </div>
        </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        var count = 0;
        $.ajax(
            fetch("http://localhost:60562/api/GetInfo",
                {
                    method: "GET",
                    headers: {
                                'Authorization': 'Bearer ' + sessionStorage.getItem("token")+":"+sessionStorage.getItem("username")
                            }
                }).then(res => res.json())
                .then(result => {
                    //console.log(result);

                    for (let i = 0; i < result.length; i++) {
                        //console.log(result[i]);
                        //console.log(@movieid);
                        if (result[i].MovieId == @movieid) {
                            localStorage.setItem("moviename", result[i].MovieName);
                            document.getElementById('container').innerHTML= `<div id='top_page'>

                <h1 id='movie_heading'>${result[i].MovieName} </h1>
                <p>${result[i].Language}</p>
                <button class='btn-dark' id='movie_button'>${result[i].Category}</button>

                <p>${result[i].ReleaseDate}</p>


            </div>
            <img id='poster' src=${result[i].ImageAddress} />
            <i class="fa fa-thumbs-up" style='font-size:xx-larger; color: green; border-width: 1px;'></i>`
                            document.getElementById('cc').innerHTML = result[i].Rating;
                        document.getElementById('synopsis').innerHTML = result[i].Synopsis;
                        //console.log(result[i])

                    }//loop

                }
        }  )
        )

        fetch("http://localhost:60562/api/GetCastInfo",
            {
                method: "GET"
                ,headers: {
                                'Authorization': 'Bearer ' + sessionStorage.getItem("token")+":"+sessionStorage.getItem("username")
                            }
            }).then(res => res.json())
            .then(result => {
                console.log(result);
                for (let i = 0; i < result.length; i++) {
                    if (result[i].MovieId ==@movieid) {
                            document.getElementById("cast").innerHTML+= ` <div class="card shadow cast mr-3">
                                            <img class="card-img-top movie_img" src=${result[i].ActorPhotoLink} alt="Card image cap">

                                            <p class="card_title">${result[i].ActorName}</p>


                                        </div>`
                    }
                }

            })
        function booknow() {

            if (count == 0) {
              //  alert('called');
                var str1 = "";
                var str = "";
                localStorage.setItem("movie_val",@movieid);
              //  console.log(movieid);
                $.ajax(
                    {
                        type: "GET", url: "http://localhost:60562//api/GetData?movieid=" + @movieid,
                        headers: {
                                'Authorization': 'Bearer ' + sessionStorage.getItem("token")+":"+sessionStorage.getItem("username")
                            },

                        success: (response) => {
                            console.log(response);
                            for (var i = 0; i < response.length; i++) {
                                var br = response[i];
                                var str2 = br.TheatreId;
                                var str3 = br.ShowId;
                                //console.log(br.TheatreId);
                                if (str != br.TheatreName) {
                                    str = br.TheatreName;

                                    document.getElementById("modal_theatures").innerHTML += "<br/><br/>" + "<h4 class='xx'>" + str + "</h4>" + "<br/>   <div class='row' id=" + str2 + 't' + "> </div>";
                                }
                                // $("#theatures").modal('show');
                                str1 = br.DateTime;
                                document.getElementById(str2 + 't').innerHTML += "<div class='cityLink card ml-2 col-md-auto' id='" + str + 't' + "' value='" + str2 + "' name='" + str3 + "'>" + str1 + "</div>";
                            }// console.log(theatreid);
                            $(document).ready(function () {
                                $(".cityLink").click(function () {
                                    $(".cityLink").removeClass('active');
                                    var time = $(this).addClass('active').text();
                                    var theatrename = $(this).attr("id");
                                    var theatreId = $(this).attr("value");
                                    var showId = $(this).attr("name");
                                    console.log(showId);
                                    console.log(theatreId);
                                    localStorage.setItem("theatreid", theatreId);
                                    localStorage.setItem("showid", showId);
                                    localStorage.setItem("theatrenm", theatrename);
                                    console.log(theatrename);
                                    localStorage.setItem("time", time);
                                    console.log(localStorage.getItem("time"));

                                });
                            });


                        }

                        , error: (err) => {
                            alert(err);
                            console.log(err);
                        }
                    });
                count++;
            }

//function func()
  //  document.getElementById("pvrname").innerHTML = localStorage.getItem("theatrenm");
        }
    </script>

</body>
</html>
